<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.main{
			padding: 4px;			
		}
	
		.playerContainer{
			width: 600px; 
			height: 450px;	
			overflow: auto;		
		}
		
		.playerContainer2{ 
			overflow: scroll;
		}
		
		.buttonPanel{			
			padding-top:8px;
			float:right;			
		}
		
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<g:ScrollPanel width ="600px" height="450px">
			<g:FlowPanel ui:field="_playerContainer">
			</g:FlowPanel>
		</g:ScrollPanel>
		<g:HTMLPanel styleName="{style.buttonPanel}">
			<g:Button ui:field="_closeButton">Close</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 